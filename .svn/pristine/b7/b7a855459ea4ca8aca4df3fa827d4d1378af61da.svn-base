<body>
<div class="container">
    <!--<div class="goods module">-->
        <!--<h2>商品详情</h2>-->
        <!--<ul class="clearfix" id="products"></ul>-->
        <!--<a class="text-center" id="hide-goods"></a>-->
    <!--</div>-->
    <div id="orders" class="goods module">
        <!--商品详情-->
        <div class="products">
            <h2>商品详情</h2>
        </div>
        <ul class="goods-container">
        </ul>

        <a class="text-center" id="hide-goods">显示全部 <span class="num"></span> 条商品信息</a>
    </div>

    <script type="text/template" id="tpl-goods">
        <% _.each(order.product, function (product, i) { %>
        <li class='media'>
            <a href='http://h5.quxiu.me/detail.html?productId=<%= product.productid%>' class=''>
                <img src="<%= formatImgSrc(product.image.replace('http://api.local.ve.cn','http://img.ve.cn')) %>" alt=""/>
            </a>

            <div class='media-body'>
                <a class="multiple-ellipsis"><%= product.name %></a>
                <span class='text-small'><%= product.attr_name %></span>
            </div>
            <div class='nums'>
                <p>￥<%= parseFloat(product.unit_price).toFixed(2) %></p>
                <span class='text-small'>x<%= product.number %></span>
            </div>
        </li>
        <% }); %>
    </script>

    <script type="text/template" id="tpl-logistics">
        <% if(orders) {%>
        <% _.each(orders, function (item, i) { %>
        <div class="logistics module">
            <div class="logistics-info">
                <span class="company"><%= item.com_name %></span>
                <p>运单编号：<span class="logistics-num"><%= item.nu %></span></p>
            </div>

            <% if(!(item.data=="null" || item.data=="" || item.data==null)){%>
            <h2>物流详情</h2>
            <div class="logistics_list">
                <ul class="main">
                <% _.each(item.data,function(it, j){ %>
                    <% if( j < 2) { %>
                        <% if(j < 1) { %>
                        <li class='new_state'>
                            <img class='first_img' src='http://img.ve.cn/public/attachment/201412/13/21/548bcfab292ed.png' alt=''/>
                            <p><%= it.context %></p>
                            <p><%= it.time %></p>
                        </li>
                        <% } else { %>
                        <li>
                            <img class='main_img' src='http://img.ve.cn/public/attachment/201412/13/23/548becb850504.png' alt=''/>
                            <p><%= it.context %></p>
                            <p><%= it.time %></p>
                        </li>
                        <% } %>
                    <% } else if(j == _.size(item.data)-1) { %>
                        <li class="hide">
                            <img class='main_img' src='http://img01.ve.cn/party/default/53ada0a371183cd0fee200173471a10d.png' alt=''/>
                            <p><%= it.context %></p>
                            <p><%= it.time %></p>
                        </li>
                    <% } else {%>
                        <li class="hide">
                            <img class='main_img' src='http://img.ve.cn/public/attachment/201412/13/23/548becb850504.png' alt=''/>
                            <p><%= it.context %></p>
                            <p><%= it.time %></p>
                        </li>
                    <% } %>
                <% }); %>
                </ul>
            </div>
            <a class="text-center hideLogistics">查看全部物流信息</a>
            <% }else{ %>
            <p class="text-center o_tips">暂无物流信息</p>
            <% }%>
        </div>
        <% }); %>
        <% }else{ %>
        <div class="logistics module"><p class="text-center o_tips">暂无物流信息</p></div>
        <% } %>
    </script>

    <!--<div class="links clearfix">-->
        <!--<a class="red" href="">申请退货</a><a href="">查看物流</a><a href="">取消订单</a>-->
    <!--</div>-->
</div>
